@using Infobox.Helpers
@model IEnumerable<Infobox.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create").If(User.IsInRole("Admin"))
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @Html.ActionLink(item.Title, "Details", new { id=item.Id })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }).If(User.IsInRole("Admin"))
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }).If(User.IsInRole("Admin"))
        </td>
    </tr>
}

</table>
